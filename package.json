{
  "name": "webpack-demo",
  "version": "1.0.0",
  "description": "It`s my basic setup for webpack. This setup can processing js/ts/html/css(scss), images, fonts, videos and sounds. Also include eslint (ts), prettier and husky",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "start": "webpack serve --open",
    "dev": "webpack --env mode=development",
    "prod": "webpack --env mode=production",
    "clear": "rd /s /q dist",
    "lint": "eslint src",
    "prettier": "prettier 'src/**/*.{js,jsx,ts,tsx,css,scss,md}' --write",
    "format": "eslint src --fix && prettier --write 'src/**/*.{js,jsx,ts,tsx,css,scss,md}'",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,css,scss,md}": [
      "npm run format"
    ]
  },
  "keywords": [],
  "author": "Pivnenko Anton",
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@eslint/js": "^9.4.0",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.4.0",
    "html-loader": "^5.0.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "mini-css-extract-plugin": "^2.9.0",
    "postcss": "^8.4.38",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^9.5.14",
    "prettier": "^3.3.2",
    "sass": "^1.77.5",
    "sass-loader": "^14.2.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.0",
    "webpack": "^5.92.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "ajv": "^8.16.0",
    "ajv-keywords": "^5.1.0",
    "normalize.css": "^8.0.1"
  }
}
